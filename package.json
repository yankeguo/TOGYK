    "contract:verify": "hardhat --tsconfig tsconfig-contract.json verify",
    "contract:clean": "rimraf artifacts cache",
    "assets:upload": "ts-node scripts/assets-upload"
  },
  "license": "MIT",
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.613.0",
