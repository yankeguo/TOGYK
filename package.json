    "@openzeppelin/contracts": "^5.0.2",
    "@yankeguo/hardhat-trezor": "^0.1.4",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.6",
    "@types/node": "^20.14.10",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
